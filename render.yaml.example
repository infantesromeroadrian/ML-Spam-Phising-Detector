# Render Blueprint Configuration
# Use this file to create services automatically via Render Blueprint
# Docs: https://render.com/docs/blueprint-spec

services:
  # Backend API Service
  - type: web
    name: spam-detector-api
    env: docker
    dockerfilePath: ./Dockerfile
    dockerContext: ./src/backend
    region: oregon  # Change to your preferred region
    plan: free
    healthCheckPath: /health
    envVars:
      - key: API_HOST
        value: 0.0.0.0
      - key: API_PORT
        value: 8000
      - key: API_WORKERS
        value: 1
      - key: API_CORS_ORIGINS
        value: https://YOUR-FRONTEND-URL.onrender.com  # REPLACE WITH YOUR FRONTEND URL

  # Frontend Static Site
  - type: web
    name: spam-detector-frontend
    env: static
    buildCommand: cd src/frontend && npm ci && npm run build
    staticPublishPath: ./src/frontend/dist
    region: oregon  # Change to your preferred region
    plan: free
    headers:
      - path: /*
        name: X-Frame-Options
        value: SAMEORIGIN
      - path: /*
        name: X-Content-Type-Options
        value: nosniff
      - path: /assets/*
        name: Cache-Control
        value: public, max-age=31536000, immutable
    routes:
      - type: rewrite
        source: /*
        destination: /index.html
    envVars:
      - key: VITE_API_URL
        value: https://YOUR-BACKEND-URL.onrender.com  # REPLACE WITH YOUR BACKEND URL
